<%- include('partials/header.ejs') %>


  <section class="mt-3">
    <div class="container">

      <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Select Category
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="/home/category/Motivation">Motivation</a>
          <a class="dropdown-item" href="#">Thriller</a>
          <a class="dropdown-item" href="#">Drama</a>
        </div>
      </div>

      <h1><b>All Books</b></h1>
      <div class="row ">
        <% newListItem.forEach(function(item) { %>
          <div class="col-md-3 p-3 ">
            <div class="card" style="height:28rem;width: 16rem;">
              <img src=" <%= item.url %>" class="card-img mt-2" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= item.booktitle %>
                </h5>
                <p>
                  <%= item.bookauthor %>
                </p>
                 <a class="btn btn-primary" href="/home/<%=item.booktitle%>">View</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>


    </div>
  </section>
