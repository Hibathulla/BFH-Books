<%- include('partials/header.ejs') %>
  <section class="mt-3">
    <div class="container">
      <div class="heading">
        <div class="dropdown show" style="float: left;">
          <a class="btn dropdown-toggle btn-light ml-2 mt-1" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select Category
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="/home/category/Motivation">Motivation</a>
            <a class="dropdown-item" href="/home/category/Thriller">Thriller</a>
            <a class="dropdown-item" href="/home/category/Drama">Drama</a>
          </div>
        </div>
        <h1 style="text-align: center;"><b>Explore</b></h1>
      </div>

      <div class="row ">
        <% newListItem.forEach(function(item) { %>
          <div class="col-md-3 p-3 ">
            <div class="card" style="height:28rem;width: 16rem;">
              <img src=" <%= item.url %>" class="card-img mt-2" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= item.booktitle .substring(0, 15)  %>
                </h5>
                <p>
                  <%= item.bookauthor %>
                </p>
                 <a class="btn btn-primary" href="/home/<%=item.booktitle%>">View</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>


    </div>
  </section>
